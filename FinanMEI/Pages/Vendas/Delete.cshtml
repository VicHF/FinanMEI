@page
@model FinanMEI.Pages.Vendas.DeleteModel

@{
    ViewData["Title"] = "Deletar venda";
}



<h3>Tem certeza que deseja apagar essa venda?</h3>
<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.NomeProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.NomeProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.ValorUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.ValorUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Qtde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Qtde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Data)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Venda.IdVenda" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-page="./Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
